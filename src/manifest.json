{
    "name": "LinkedIn Banner Customizer",
    "version": "1.0.0",
    "description": "Customize your LinkedIn profile banner with beautiful templates and text overlays",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_title": "LinkedIn Banner Customizer"    },
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["templates/*"],
        "matches": ["*://*.linkedin.com/*"]
      }
    ]  
  }